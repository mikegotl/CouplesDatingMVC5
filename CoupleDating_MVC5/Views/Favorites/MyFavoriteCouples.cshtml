@model IEnumerable<CoupleDating_MVC5.Models.Favorites>

@{
    ViewBag.Title = "MyFavoriteCouples";
}

<h2 class="box">My Favorite Couples</h2>

<section id="pinBoot">
    @foreach (var item in Model)
    {
        var href = "/members/details/" + item.favoriteID;
        <article class="box white-panel">

            <a href="@href">
                <label>@item.Member.ScreenName</label>
                <p>@item.Member.Tagline</p>
                <img src="@item.Member.MemberMedia.FirstOrDefault().path" />
            </a>
            <button class="btn btn-warning btn-block" onclick="javascript: window.location = ('@Url.Action("DeleteMyFav", "Favorites", new { id = item.favoriteID })')">
                Remove
            </button>
        </article>

    }
</section>
<div class="clearfix"></div>