@model IEnumerable<CoupleDating_MVC5.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Articles</h2>
<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">Top Articles about the Double-Dating trend!</div>
        <div class="panel-body">
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-md-4">

                        <a href="@item.ArticleExternalLinks.FirstOrDefault().url" target="_blank">
                            <img class="img-responsive" src="@item.ArticleExternalLinks.FirstOrDefault().ArticleExternalMedia.FirstOrDefault().path" alt="...">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <a href="@item.ArticleExternalLinks.FirstOrDefault().url" target="_blank">
                            <h4 class=" media-heading">@item.title</h4>
                        </a>
                        @item.blurb
                        <a href="@item.ArticleExternalLinks.FirstOrDefault().url" target="_blank"> Read more...</a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>