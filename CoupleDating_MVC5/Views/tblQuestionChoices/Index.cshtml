@model IEnumerable<CoupleDating_MVC5.Models.QuestionChoices>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Questions.questionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.questionChoiceFull)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ordinal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Questions.questionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.questionChoiceFull)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ordinal)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.questionChoiceID }) |
            @Html.ActionLink("Details", "Details", new { id = item.questionChoiceID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.questionChoiceID })
        </td>
    </tr>
}
</table>