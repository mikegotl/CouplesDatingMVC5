@model CoupleDating_MVC5.Models.Friends

@using (Html.BeginForm("SendFriendRequest", "Friends", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    if (Model == null)
    {
        <input type="submit" value="Send Friend Request" name="SendFriendRequest" class="btn btn-success" />

    }
    else
    {
        <input type="submit" value="Unfriend" name="SendFriendRequest" class="btn btn-warning" />
    }

}